%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Set standard header for all other pages
%
%

\defbeamertemplate*{frametitle}{gsc theme}[1][left]
{
  \@tempdima=0.75\textwidth%
  \advance\@tempdima by\beamer@rightmargin%

  \vskip0.3cm

  \begin{beamercolorbox}[sep=0cm,#1,ht=6ex,wd=\the\@tempdima]{frametitle}
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    {\usebeamerfont{frametitle}\insertframetitle\par}%
   \end{beamercolorbox}%
}


